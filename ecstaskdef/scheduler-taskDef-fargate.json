{
    "family": "airflow-demo-scheduler", 
    "taskRoleArn": "", 
    "executionRoleArn": "", 
    "networkMode": "awsvpc", 
    "containerDefinitions": [
        {
            "name": "scheduler", 
            "image": "", 
            "cpu": 0, 
            "memory": 1024, 
            "memoryReservation": 512, 
            "essential": true, 
            "command": [
                "scheduler"
            ], 
            "environment": [
                {
                    "name": "EXECUTOR", 
                    "value": "Celery"
                }
            ], 
            "mountPoints": [
                {
                    "sourceVolume": "dags", 
                    "containerPath": "/usr/local/airflow/dags", 
                    "readOnly": true
                }
            ], 
            "logConfiguration": {
                "logDriver": "awslogs", 
                "options": {
                    "awslogs-group": "/ecs/airflow-demo-scheduler",
                    "awslogs-region": "ap-southeast-2",
                    "awslogs-stream-prefix": "ecs"                
                }
            }
        },
        {
            "name": "git-sync", 
            "image": "", 
            "cpu": 0, 
            "memory": 256, 
            "memoryReservation": 128, 
            "essential": true, 
            "environment": [
                {
                    "name": "GIT_SYNC_BRANCH",
                    "value": "testing"
                },
                {
                    "name": "GIT_SYNC_DEST",
                    "value": "/git"
                },
                {
                    "name": "GIT_SYNC_REPO",
                    "value": "https://github.com/jeevanullas/airflow-sample-dags.git"
                },
                {
                    "name": "GIT_SYNC_REV",
                    "value": "FETCH_HEAD"
                },
                {
                    "name": "GIT_SYNC_WAIT",
                    "value": "10"
                }
            ], 
            "mountPoints": [
                {
                    "sourceVolume": "dags", 
                    "containerPath": "/git", 
                    "readOnly": false
                }
            ], 
            "logConfiguration": {
                "logDriver": "awslogs", 
                "options": {
                    "awslogs-group": "/ecs/airflow-demo-scheduler",
                    "awslogs-region": "ap-southeast-2",
                    "awslogs-stream-prefix": "ecs"                
                }
            }
        }
    ], 
    "volumes": [
        {
          "name": "dags"
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ], 
    "cpu": "1024", 
    "memory": "2048"
}
